@model WebMvcMysql.Models.Users

@{
    ViewData["Title"] = "Login";
    ViewData["User"] = ViewBag.User;
    ViewData["Logs"] = ViewBag.Log;
}

<h1>Login</h1>

<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal">Entre com seu nome</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Name" type="Name" id="Name" class="form-control" required autofocus>
                <input type="hidden" id="Admin" name="Admin" value="true" />
            </div>
            <button class="btn btn-lg btn-primary btn-block" value="Login" type="submit">Login</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
